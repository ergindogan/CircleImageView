<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="image" format="reference"/>

        <attr name="showShadow" format="reference|boolean" />
        <attr name="shadowColor" format="reference|color" />
        <attr name="shadowXDiff" format="reference|dimension" />
        <attr name="shadowYDiff" format="reference|dimension" />
        <attr name="shadowSize" format="reference|dimension" />
        <attr name="shadowAlpha" format="reference|integer" />

        <attr name="borderColor" format="reference|color" />
        <attr name="borderSize" format="reference|dimension" />

        <attr name="autoAnimate" format="reference|boolean" />
        <attr name="reflectionColor" format="reference|color" />
        <attr name="reflectionAlpha" format="reference|integer" />

        <attr name="lightPassDuration" format="reference|integer" />
        <attr name="animationRepeatDelay" format="reference|integer" />
        <attr name="minLightAlpha" format="reference|integer" />
        <attr name="maxLightAlpha" format="reference|integer" />
        <attr name="minShadowAlpha" format="reference|integer" />
        <attr name="maxShadowAlpha" format="reference|integer" />
        <attr name="shadowReverseAnimationDuration" format="reference|integer" />
        <attr name="shadowReverseAnimationDelay" format="reference|integer" />

        <attr name="lightDirection">
            <enum name="Left" value="0"/>
            <enum name="Right" value="1"/>
        </attr>
    </declare-styleable>
</resources>
